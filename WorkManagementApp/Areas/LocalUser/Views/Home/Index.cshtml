@{
    ViewData["Title"] = "Nirman Group Company";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-center py-4">
            <h1 class="text-dark">Nirman Group Company</h1>
            <h3 class="text-light">Construction</h3>
        </div>
        <div class="card-body">
            <div class="text-center py-4">
                <h2 class="text-primary">Welcome to Nirman Group</h2>
                <p class="lead">Nirman Group is a well-developed company known for its excellence in constructing multiple bridges, roads, homes, and more. Our commitment to quality and innovation has made us a leader in the construction industry.</p>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Bridges</h5>
                            <p class="card-text">We build durable and innovative bridges that connect communities and enhance transportation efficiency.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Roads</h5>
                            <p class="card-text">Our road construction projects are designed to last and support heavy traffic, ensuring smooth and safe travel.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Homes</h5>
                            <p class="card-text">We create beautiful and sustainable homes that offer comfort, safety, and modern amenities for families.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("ContactUs", "Home")" class="btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>
</div>
